<%= form_with model: chat, 
    id: "chat_form",
    class: "flex flex-col", 
    data: { 
      controller: "reset-form",
      action: "turbo:submit-end->reset-form#reset" 
    } do |form| %>
  <%= fields_for :message do |message_form| %>
    <%= message_form.text_area :content,
      class: "w-full resize-none border rounded-md bg-transparent focus:ring-0 text-sm text-gray-900 placeholder:text-gray-500",
      placeholder: "Type your message...",
      rows: 3 %>
  <% end %>
  
  <div class="flex justify-end mt-2">
    <%= form.button class: "btn btn--primary btn--sm" do %>
      <%= lucide_icon("send", class: "w-4 h-4") %>
      <span>Send</span>
    <% end %>
  </div>
<% end %>
